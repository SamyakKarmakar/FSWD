<!-- edit-ticket.hbs -->

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit Ticket</title>
</head>
<body>
  <h1>Edit Ticket</h1>

  <!-- Form to edit ticket -->
  <form action="/edit-ticket/{{ticket._id}}" method="POST">
    <div>
      <label for="title">Title:</label>
      <input type="text" id="title" name="title" value="{{ticket.title}}" required>
    </div>
    <div>
      <label for="description">Description:</label>
      <textarea id="description" name="description" required>{{ticket.description}}</textarea>
    </div>
    <div>
      <label for="status">Status:</label>
      <select id="status" name="status" required>
        <option value="open" {{statusOpen}}>Open</option>
        <option value="in-progress" {{statusInProgress}}>In Progress</option>
        <option value="closed" {{statusClosed}}>Closed</option>
      </select>
    </div>
    <button type="submit">Save Changes</button>
  </form>

  <a href="/dashboard">Go Back</a>
</body>
</html>
